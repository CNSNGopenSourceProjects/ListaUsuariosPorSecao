<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corListaUsuariosFundo">

    <TextView
        android:id="@+id/txt_usuario_nome_grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/corTituloFundo"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/corTituloCorpo"
        android:textSize="30sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_usuario_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/corUsuarioFundo"
        android:padding="4dp"
        android:textColor="@color/corUsuarioCorpo"
        android:textSize="18sp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />
</LinearLayout>
